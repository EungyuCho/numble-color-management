{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "jsx": "react",
    "target": "ES5",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src/**/*"]
}
